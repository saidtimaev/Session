{% extends 'base.html.twig' %}

{% block title %}{{formateur.prenom ~ ' ' ~ formateur.nom}}{% endblock %}

{% block body %}
    {# Infos du formateur #}
    <h1>Informations de {{formateur.prenom ~ ' ' ~ formateur.nom}}</h1>
    <a href="">Modifier</a> <br>
    <a href="">Supprimer</a> <br>
    <p>Sexe : {{formateur.sexe}} </p>
    <p>Courriel : {{formateur.email}} </p>
    
    <h3>Sessions</h3>
    {# Liste des sessions auquelles il participe #}
    {% if formateur.sessions | length > 0  %}
        <table class="table table-striped table-bordered">
            <thead>  
                <tr class="table-primary">
                    <th>Sessions</th>
                    <th>Début</th>
                    <th>Fin</th>
                </tr>
            </thead>
            <tbody>
                {% for session in formateur.sessions %}
                    <tr>
                        <td><a href="{{path('show_session', {'id' : session.id})}}">{{session.intitule}}</a></td>
                        <td>{{session.dateDebut|date("d/m/Y")}}</td>
                        <td>{{session.dateFin|date("d/m/Y")}}</td>
                    </tr> <br>
                {% endfor %}
            </tbody>
        </table>
    {% else %}    
        <p>{{formateur.prenom ~ ' ' ~ formateur.nom}} ne participe à aucune session</p>
    {% endif %}

{% endblock %}