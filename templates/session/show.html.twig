{% extends 'base.html.twig' %}

{% block title %}{{session.intitule}}{% endblock %}

{% block body %}
    <h1>Détails de la session {{session.intitule}}</h1>
    <a href="">Modifier</a> <br>
    <a href="">Supprimer</a> <br>
    <p>Total des places : {{session.places}} </p>
    <p>Places reservées : ? </p>
    <p>Places disponibles : ? </p>
    <p>Début : {{session.dateDebut|date("d/m/Y")}} </p>
    <p>Fin : {{session.dateFin|date("d/m/Y")}} </p>

    <h3>Formateur : </h3>

    <p>Formateur</p>
    
    <h3>Stagiaires</h3>
    {% if session.stagiaires | length > 0  %}
        <table class="table table-striped">
            <thead>  
                <tr class="table-primary">
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for stagiaire in session.stagiaires %}
                    <tr>
                        <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id})}}">{{stagiaire.nom|upper}}</a></td>
                        <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id})}}">{{stagiaire.prenom}}</a></td>
                        <td><a href="">Désinscrire</a></td>
                    </tr> <br>
                {% endfor %}
            </tbody>
        </table>
    {% else %}    
        <p>Aucun stagiaire participe à cette session</p>
    {% endif %}

    {% if stagiaires|length > 0 %}
        <h3>Stagiaires non inscrits</h3>
        <table class="table table-striped">
            <thead>  
                <tr class="table-primary">
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for stagiaire in stagiaires %}
            
                    <tr>
                        <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id})}}">{{stagiaire.nom|upper}}</a></td>
                        <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id})}}">{{stagiaire.prenom}}</a></td>
                        <td><a href="{{ path('add_stagiaire', {'idStagiaire': stagiaire.id , 'idSession': session.id})}}">Inscrire</a></td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <h3>Programme</h3>
    {% if session.programmes | length > 0  %}
        <table class="table table-striped table-bordered">
            <thead>  
                <tr class="table-primary">
                    <th>Module</th>
                    <th>Durée en jours</th>
                </tr>
            </thead>
            <tbody>
                {% for programme in session.programmes %}
                    <tr>
                        <td><a href="">{{programme.modulee.intitule}}</a></td>
                        <td><a href="">{{programme.duree}}</a></td>
                    </tr> <br>
                {% endfor %}
            </tbody>
        </table>
    {% else %}    
        <p>Le programme de la session n'a pas été défini encore</p>
    {% endif %}

{% endblock %}