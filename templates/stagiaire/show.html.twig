{% extends 'base.html.twig' %}

{% block title %}{{stagiaire.prenom ~ ' ' ~ stagiaire.nom}}{% endblock %}

{% block body %}
    {# Infos du stagiaire #}
    <h1>Informations de {{stagiaire.prenom ~ ' ' ~ stagiaire.nom}}</h1>
    <a href="">Modifier</a> <br>
    <a href="">Supprimer</a> <br>
    <p>Sexe : {{stagiaire.sexe}} </p>
    <p>Date de naissance : {{stagiaire.dateNaissance|date("d/m/Y")}} </p>
    <p>Ville : {{stagiaire.ville}} </p>
    <p>Courriel : {{stagiaire.email}} </p>
    <p>Téléphone : {{stagiaire.telephone}} </p>
    
    <h3>Sessions</h3>
    {# Liste des sessions auquelles il participe #}
    {% if stagiaire.sessions | length > 0  %}
        <table class="table table-striped">
            <thead>  
                <tr>
                    <th>Sessions</th>
                    <th>Début</th>
                    <th>Fin</th>
                </tr>
            </thead>
            <tbody>
                {% for session in stagiaire.sessions %}
                    <tr>
                        <td><a href="">{{session.intitule}}</a></td>
                        <td><a href="">{{session.dateDebut|date("d/m/Y")}}</a></td>
                        <td><a href="">{{session.dateFin|date("d/m/Y")}}</a></td>
                    </tr> <br>
                {% endfor %}
            </tbody>
        </table>
    {% else %}    
        <p>{{stagiaire.prenom ~ ' ' ~ stagiaire.nom}} ne participe à aucune session</p>
    {% endif %}

{% endblock %}